---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { css } from "styled-system/css";

interface Props {
  name: string;
  image?: ImageMetadata;
}
const { name, image } = Astro.props;
---

<div class={css({ display: "inline", alignItems: "center" })}>
  {
    image && (
      <Image
        src={image}
        alt={name}
        width={32}
        height={32}
        class={css({
          display: "inline",
          width: "4",
          height: "4",
          borderRadius: "full",
          marginRight: "0.5",
        })}
      />
    )
  }
  <span
    class={css({
      fontSize: "sm",
      fontWeight: "semibold",
    })}>{name}</span
  >
</div>
